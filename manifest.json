{
  "manifest_version": 3,
  "name": "Burnout Risk Indicator",
  "version": "1.0",
  "description": "Early Digital Fatigue & Burnout Risk Indicator",

  "action": {
    "default_popup": "popup.html"
  },

  "permissions": ["storage"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
